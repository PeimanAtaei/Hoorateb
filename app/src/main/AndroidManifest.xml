<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atisapp.hoorateb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logos"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logos"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Payment.PaymentDetailActivity"></activity>
        <activity android:name=".Payment.PaymentListActivity" />
        <activity android:name=".MainFragment.ui.account.AddressManagementActivity" />
        <activity android:name=".Payment.CheckOrderActivity" />
        <activity android:name=".Product.ProductListActivity" />
        <activity android:name=".MainFragment.ui.category.SubCategoryActivity" />
        <activity android:name=".MainFragment.ui.account.EditAdressActivity" />
        <activity android:name=".MainFragment.ui.account.EditUserActivity" />
        <activity android:name=".ForgetPassword.PhoneActivity" />
        <activity android:name=".ForgetPassword.VerifyActivity" />
        <activity android:name=".ForgetPassword.PasswordActivity" />
        <activity android:name=".Search.SearchActivity" />

        <activity
            android:name=".Splash.SplashActivity"
            android:label="HooraTeb">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Product.ProductDetailActivity"
            android:label="" />
        <activity
            android:name=".MainFragment.MainActivity"
            android:label="" >

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="hoorateb" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Login.RegisterActivity"
            android:label="" />
        <activity
            android:name=".Login.LoginActivity"
            android:label="" />
        <activity
            android:name=".Comment.CommentActivity"
            android:label="" />
    </application>

</manifest>