<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
        <item name="editTextStyle">@style/RobotoEditStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="radioButtonStyle">@style/RobotoRadioStyle</item>


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iransans_meduim_num</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/lalezar_regular</item>
        <item name="android:textColor">@color/text_color2</item>
    </style>

    <style name="RobotoEditStyle" parent="android:Widget.Holo.EditText">
        <item name="fontFamily">@font/iransans_meduim_num</item>
    </style>

    <style name="RobotoRadioStyle" parent="android:Widget.Holo.CompoundButton.RadioButton">
        <item name="fontFamily">@font/iransans_meduim_num</item>
    </style>

    <style name="login_input">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="customTab">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="spinnerDropDownItemStyle2">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="navigation_view">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorIcon</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorIcon</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--    <style name="Widget.BottomNavigationView"-->
    <!--        parent="Widget.Design.BottomNavigationView">-->
    <!--        <item name="fontFamily">@font/IRANSansMobile_Bold.ttf</item>-->
    <!--    </style>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
