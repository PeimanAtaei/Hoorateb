<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    >

    <LinearLayout
        android:id="@+id/eachItem_payment_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_background_white"

        android:layout_margin="@dimen/margin_elevation"
        android:elevation="4dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/eachItem_payment_list_image"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:src="@drawable/product_eachitem"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:layout_marginRight="@dimen/margin_normal"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            >
            <TextView
                android:id="@+id/eachItem_payment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نام محصول"
                android:textColor="@color/text_color2"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:textSize="@dimen/text_size_larg"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/eachItem_payment_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="توضیحات محصول با توجه به ویژگی های و نکات مختلف بر اساس موارد بیان شده در صفحه توضیحات"
                android:textColor="@color/hint_color"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:textSize="@dimen/text_size_normal"
                android:ellipsize="end"
                android:maxLines="2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="قیمت :"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/text_size_normal"/>
                    <TextView
                        android:id="@+id/eachItem_payment_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="1950000"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_small"
                        android:textColor="@color/colorAccent2"
                        android:textSize="@dimen/text_size_normal"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:src="@drawable/toman"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تعداد :"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/text_size_normal"/>
                    <TextView
                        android:id="@+id/eachItem_payment_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_small"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/colorAccent2"
                        android:textSize="@dimen/text_size_normal"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>