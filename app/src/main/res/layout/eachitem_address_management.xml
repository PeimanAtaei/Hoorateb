<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    >
    <LinearLayout
        android:id="@+id/eachItem_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/selector_background_white"
        android:elevation="4dp"
        android:layout_margin="@dimen/margin_small"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            >
            <RadioButton
                android:id="@+id/eachItem_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/eachItem_check_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="آدرس فعلی شما"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/green"
                android:padding="@dimen/margin_small"
                android:gravity="center|right"
                android:visibility="invisible"
                />

            <LinearLayout
                android:id="@+id/profile_address_edit_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="ویرایش"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/colorAccent2"
                    android:padding="@dimen/margin_small"

                    android:gravity="center|left"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_edit"
                    android:layout_marginLeft="@dimen/margin_normal"/>
                <ImageView
                    android:id="@+id/profile_address_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_more_popup"
                    android:layout_marginLeft="@dimen/margin_normal"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="آدرس محل دریاف محصول"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_size_small"
                android:gravity="right"
                android:paddingRight="@dimen/margin_normal"
                />
            <TextView
                android:id="@+id/eachItem_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="در حال دریافت آدرس کاربر"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/text_size_larg"
                android:gravity="right"
                android:paddingRight="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_small"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_gray"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_normal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="پلاک"
                    android:textColor="@color/colorAccent2"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/eachItem_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size_larg"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_normal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_normal"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="واحد"
                    android:textColor="@color/colorAccent2"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/eachItem_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size_larg"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_normal"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_normal"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="کد پستی"
                    android:textColor="@color/colorAccent2"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/eachItem_post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size_larg"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_normal"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>